// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model UrlConfig {
  id               String   @id @default(cuid())
  host             String
  path             String
  pageInternal     String
  ctas             Json?
  analyticsSnippet Json?
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  @@unique([host, path])
  @@index([host, path])
}

model RequestLog {
  id               String   @id @default(cuid())
  timestamp        DateTime
  path             String
  userLanguage     String
  allowedLanguages String
  isBlocked        Boolean
  isGoogleBot      Boolean  @default(false)
  botVerified      Boolean  @default(false)
  blockReason      String?
  userAgent        String?
  referer          String?
  ip               String?
  createdAt        DateTime @default(now())

  @@index([timestamp])
  @@index([path])
  @@index([isBlocked])
  @@index([isGoogleBot])
}
